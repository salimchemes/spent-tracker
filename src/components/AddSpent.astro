---
import Toaster from "../components/Toaster.astro";
import "../styles/toaster.css";

const getTodayDate = () => {
  const today = new Date();
  const year = today.getFullYear();
  const month = String(today.getMonth() + 1).padStart(2, "0");
  const day = String(today.getDate()).padStart(2, "0");
  return `${year}-${month}-${day}`;
};
---

<form id="add-expense-form" class="max-w-md mx-auto">
  <!-- Date Input -->
  <div class="mb-4">
    <label
      for="date"
      class="block text-sm font-medium text-gray-700 dark:text-gray-200"
      >Date</label
    >
    <input
      type="date"
      id="date"
      name="date"
      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600"
      value={getTodayDate()}
      required
    />
  </div>
  <!-- category Dropdown -->
  <div class="mb-4">
    <label
      for="category"
      class="block text-sm font-medium text-gray-700 dark:text-gray-200"
      >Category</label
    >
    <select
      id="category"
      name="category"
      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600"
      required
    >
      <option value="" disabled selected>Select a category</option>
      <option value="dietetica">Dietetica</option>
      <option value="farmacia">Farmacia</option>
      <option value="nafta">Nafta</option>
      <option value="restaurant">Restaurant</option>
      <option value="super">Super</option>
      <option value="verduleria">Verduleria</option>
      <option value="other">Otro</option>
    </select>
  </div>

  <!-- Amount Input -->
  <div class="mb-4">
    <label
      for="amount"
      class="block text-sm font-medium text-gray-700 dark:text-gray-200"
      >Amount</label
    >
    <input
      type="tel"
      inputmode="numeric"
      pattern="[0-9]*"
      id="amount"
      name="amount"
      step="0.01"
      class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:bg-gray-700 dark:border-gray-600"
      required
    />
  </div>

  <!-- Payment Type Radio Buttons -->
  <div class="mb-4">
    <label
      class="block text-sm font-medium text-gray-700 dark:text-gray-200 mb-2"
      >Payment Type</label
    >
    <div class="space-y-2">
      <div class="flex items-center">
        <input
          type="radio"
          id="cash"
          name="payment_type"
          value="cash"
          class="h-4 w-4 text-blue-600"
          checked
          required
        />
        <label for="cash" class="ml-2 text-sm text-gray-700 dark:text-gray-200"
          >Cash</label
        >
      </div>
      <div class="flex items-center">
        <input
          type="radio"
          id="credit"
          name="payment_type"
          value="credit"
          class="h-4 w-4 text-blue-600"
        />
        <label
          for="credit"
          class="ml-2 text-sm text-gray-700 dark:text-gray-200"
          >Credit Card</label
        >
      </div>
      <div class="flex items-center">
        <input
          type="radio"
          id="debit"
          name="payment_type"
          value="debit"
          class="h-4 w-4 text-blue-600"
        />
        <label for="debit" class="ml-2 text-sm text-gray-700 dark:text-gray-200"
          >Debit Card</label
        >
      </div>
    </div>
  </div>

  <!-- Created By Radio Buttons -->
  <div class="mb-4">
    <label class="block text-sm font-medium text-gray-700 dark:text-gray-200"
      >Created by</label
    >
    <div class="mt-2">
      <label class="inline-flex items-center">
        <input
          type="radio"
          name="created_by"
          value="flavia"
          class="form-radio text-blue-600"
        />
        <span class="ml-2">Flavia</span>
      </label>
      <label class="inline-flex items-center ml-6">
        <input
          type="radio"
          name="created_by"
          value="salim"
          class="form-radio text-blue-600"
        />
        <span class="ml-2">Salim</span>
      </label>
    </div>
  </div>

  <!-- Save Button -->
  <button
    type="submit"
    class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
  >
    Save Expense
  </button>
  <Toaster message="" />
</form>
<div id="toaster" class="toaster"></div>
<script>
  import { showToaster } from "../utils/toaster.js";

  const handleSubmit = async (event: Event) => {
    event.preventDefault();
    const formData = new FormData(event.target as HTMLFormElement);
    const created_by =
      localStorage.getItem("spentTrackerDefaultUser") || "flavia";
    const data = { ...Object.fromEntries(formData), created_by };
    const response = await fetch("/api/expenses", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify(data),
    });

    if (response.ok) {
      showToaster("Expense added successfully!");
      if (event.target) {
        (event.target as HTMLFormElement).reset();

        // Preserve the "Created by" radio button state
        const spentTrackerDefaultUser =
          localStorage.getItem("spentTrackerDefaultUser") || "flavia";
        const defaultRadio = form?.querySelector(
          `input[name="created_by"][value="${spentTrackerDefaultUser}"]`
        ) as HTMLInputElement;
        if (defaultRadio) {
          defaultRadio.checked = true; // Keep the selected radio button checked
        }
      }
    } else {
      showToaster("Failed to add expense.", false);
    }
  };

  const form = document.getElementById("add-expense-form");
  if (form) {
    form.addEventListener("submit", handleSubmit);
  }

  document.addEventListener("DOMContentLoaded", () => {
    const spentTrackerDefaultUser =
      localStorage.getItem("spentTrackerDefaultUser") || "flavia";
    const defaultRadio = document.querySelector(
      `input[name="created_by"][value="${spentTrackerDefaultUser}"]`
    ) as HTMLInputElement;
    if (defaultRadio) {
      defaultRadio.checked = true;
    }
  });

  document.querySelectorAll('input[name="created_by"]').forEach((radio) => {
    radio.addEventListener("change", (event) => {
      const target = event.target as HTMLInputElement;
      if (target) {
        localStorage.setItem("spentTrackerDefaultUser", target.value);
      }
    });
  });
</script>
